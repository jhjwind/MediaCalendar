{
  "name": "MediaCalendar",
  "version": "1.0",
  "description": "......",
  "background_page": "background.html",
  "content_scripts": [
    {
      "matches": [ "http://www.google.com/calendar/*", "https://www.google.com/calendar/*" ],
      "run_at": "document_end",
      "js": [ "jquery-1.4.2.js", "tv_shows.js", "page.js" ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "popup": "popup.html"
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*",
    "cookies", "*://*.google.com/calendar"
  ]
}